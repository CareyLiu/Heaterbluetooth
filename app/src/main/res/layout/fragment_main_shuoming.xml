<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="169pt"
        android:background="@color/bg_title_new">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28pt"
            android:includeFontPadding="false"
            android:text="说明"
            android:textColor="@color/white"
            android:textSize="33pt"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84pt"
        android:background="#00494A"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_fengnuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_fengnuan"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="风暖加热器"
                android:textColor="@color/text_color_blue"
                android:textSize="30pt" />

            <View
                android:id="@+id/vv_fengnuan"
                android:layout_width="123pt"
                android:layout_height="8pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/text_color_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dashui"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_dashui"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="大水加热器"
                android:textColor="@color/white"
                android:textSize="30pt" />

            <View
                android:id="@+id/vv_dashui"
                android:layout_width="123pt"
                android:layout_height="8pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/text_color_blue"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fengnuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/shuomingshu" />

            <ImageView
                android:id="@+id/iv_dashui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/shuomingshu_shuinuan"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>